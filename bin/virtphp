if (PHP_SAPI !== 'cli') {
    echo 'Warning: VirtPHP should be invoked via the CLI version of PHP, not the '.PHP_SAPI.' SAPI'.PHP_EOL;
}

date_default_timezone_set('UTC');
set_time_limit(0);

require __DIR__.'/../src/bootstrap.php';

use Virtphp\Command\InstallCommand;
use Virtphp\Command\CloneCommand;
use Virtphp\Command\ActivateCommand;
use Virtphp\Command\DeactivateCommand;
use Symfony\Component\Console\Application;

$app = new Application('Virtphp Console App', '0.0.1');
$app->add(new InstallCommand);
$app->add(new CloneCommand);
$app->add(new ActivateCommand);
$app->add(new DeactivateCommand);
$app->run();
